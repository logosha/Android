<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:src="@drawable/default_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/default_photo"
            android:clickable="true"
            android:onClick="true"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm looking for Junior Java Developer position. To contribute my skills to achieving your company's goals."
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_below="@+id/default_photo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center">
    </TextView>

        <LinearLayout
            android:id="@+id/layout_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dip"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/default_photo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="@string/name"
                android:textColor="@color/colorText"
                android:textSize="20dp"
                android:clickable="true">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/second_name"
                android:text="@string/second_name"
                android:textColor="@color/colorText"
                android:layout_below="@+id/name"
                android:clickable="true">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_number"
                android:layout_below="@id/second_name"
                android:text="@string/phone_number"
                android:textColor="@color/colorText"
                android:clickable="true">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_below="@id/phone_number"
                android:text="@string/email"
                android:textColor="@color/colorText"
                android:clickable="true">
            </TextView>

        </LinearLayout>

</RelativeLayout>

